{
  "expo": {
    "name": "Bear",
    "slug": "bear-app",
    "scheme": "bear",
    "version": "0.1.0",
    "orientation": "portrait",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#ffe6ee"
    },
    "extra": {
      "EXPO_PUBLIC_API_URL": "https://bear-backend-xe69.onrender.com"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "permissions": [
        "BLUETOOTH",
        "BLUETOOTH_ADMIN",
        "BLUETOOTH_CONNECT",
        "BLUETOOTH_SCAN",
        "ACCESS_FINE_LOCATION"
      ],
      "adaptiveIcon": {
        "backgroundColor": "#ffe6ee"
      },
      "package": "com.bear.app"
    },
    "web": {
      "bundler": "metro"
    }
  }
}
